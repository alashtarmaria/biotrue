    TRISF.F0 = 0;   // SCK -> output
    TRISF.F1 = 0;   // SDO -> output
    TRISF.F2 = 1;   // SDI -> input
    TRISF.F12 = 0;   // Default CS -> output (gerekiyorsa baska CS pinine geçilebilir)

    LATF.F12 = 1;    // CS pasif konumda baslat
}
